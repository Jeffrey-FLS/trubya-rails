<h1><%= raw @question.question %></h1>
<h2><%= @question.topic.name %> </h2>

<ul>
    <% @question.answers.each do |answer| %>
        <% if answer.correct %>
            <strong><li><%=  raw answer.answer %></li></strong>
        <% else %>
            <li><%= raw answer.answer %></li>
        <% end %>
        
    <% end %>
</ul>

<%= button_to "Delete", question_path, method: :delete %>