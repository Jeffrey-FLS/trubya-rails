<h1><%= @question.question %></h1>

<ul>
    <% @question.answers.each do |answer| %>
        <% if answer.correct %>
            <strong><li><%= answer.answer %></li></strong>
        <% else %>
            <li><%= answer.answer %></li>
<% end %>

    <% end %>
</ul>

<%= button_to "Delete", question_path, method: :delete %>