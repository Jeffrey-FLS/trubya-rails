




<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="main col-6" style="margin-top: 5px;">
        <h1>Edit an image </h1>

        <%= render 'form', image:@image %>

        <%= button_to "Delete", @image, method: :delete, data:
        { confirm: "Are you sure you want to delete this image?" } %>

    </div>
    <div class="col-3"></div>
  </div>
</div>
